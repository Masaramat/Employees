<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet  id="1"  author="mangut">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="employees"/>
            </not>
        </preConditions>
        <createTable
                schemaName="employees_db"
                tableName="employees">
            <column  name="id"  type="int(9)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="address" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="department_id" type="int(9)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="mangut">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="departments"/>
            </not>
        </preConditions>
        <createTable
                schemaName="employees_db"
                tableName="departments">
            <column  name="id"  type="int(9)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="true" unique="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="mangut">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="users"/>
            </not>
        </preConditions>
        <createTable
                schemaName="employees_db"
                tableName="users">
            <column  name="id"  type="int(9)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="role" type="varchar(255)"/>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet  author="mangut"  id="4">
        <createView  catalogName="employees_db"
                     encoding="UTF-8"
                     fullDefinition="false"
                     remarks="To make searching for employee easier"
                     replaceIfExists="true"
                     schemaName="employees_db"
                     viewName="employee_view">SELECT e.*, d.name as department
                                                FROM employees e
                                                LEFT JOIN departments d on e.department_id = d.id
        </createView>
    </changeSet>
    <changeSet id="5" author="mangut">
        <insert tableName="departments">
            <column name="name" value="ICT"/>
            <column name="description" value="Computer resources management"/>
        </insert>
    </changeSet>
